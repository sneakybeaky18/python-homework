# 4. Необходимо написать программу,
# открывающую файл на чтение и считывающую построчно
# данные. При этом английские числительные
# должны заменяться на русские. Новый блок строк
# должен записываться в новый текстовый файл.

file = open("datalist.txt", "r", encoding="utf-8")
readed = file.readlines()

rus_numbers = ["Один", "Два", "Три", "Четыре"]
eng_numbers = ["One", "Two", "Three", "Four"]

names_list = []
for el in readed:
    name, line, value = el.split()
    names_list.append(name)

russian_int = []
for el in names_list:
    rus_list = el.replace(eng_numbers[0],rus_numbers[0])
    del rus_numbers[0]
    del eng_numbers[0]
    russian_int.append(rus_list)


metadata = []
for el in readed:
    name, line, value = el.split()
    new = russian_int[0], line, value
    del russian_int[0]
    metadata.append(new)

rusIntStr = "\n".join([str(el) for el in metadata])
elems = [")", "(", "'", ","]

for el in rusIntStr:
    if el in elems:
        rusIntStr = rusIntStr.replace(el, "")

with open("changed_data.txt", "w") as file:
    file.writelines(rusIntStr)
